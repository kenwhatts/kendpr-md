---
import FooterBorder from "../components/footer/footerBorder.astro";
const { wrapsBlogPost } = Astro.props;
---

<>
  <div
    data-wrapsBlogPost={wrapsBlogPost === "true" ? "true" : "false"}
    class="data-wrapsBlogPost:prose-headings:font-bold col-start-2 w-full max-w-(--breakpoint-sm) min-w-[375px] bg-primary/20 px-[6.5%] sm:px-[calc(var(--breakpoint-sm)*0.065)] sm:relative sm:mx-auto sm:border-x sm:border-secondary sm:backdrop-blur-xs">
    <slot />
    <FooterBorder />
  </div>
</>
