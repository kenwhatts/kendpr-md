---
import MainLayout from "../layout/mainLayout.astro";
import SkillList from "../components/cards/SkillList.astro";
import { Content as About } from "../about/about.mdx";
import Projects from "../components/sections/projects.astro";
import LatestPosts from "../components/sections/latestPosts.astro";
import Column from "../layout/column.astro";
import Html from "../layout/html.astro";
import type { MetaTagProps } from "../type/metaTypes";
import Linkout from "../components/icons/linkout.astro";
import ContactButton from "../components/contactButton.astro";

const metaTags: MetaTagProps = {
  title: "Ken Rula",
  description: "Building fast and responsive websites.",
  url: Astro.url,
};
---

<Html title="Ken Rula" metaTags={metaTags}>
  <MainLayout pageType="Home">
    <Column>
      <header class="grid min-h-[calc(100dvh-175px)] content-center">
        <div>
          <h1 class="flex text-4xl tracking-tight text-balance">
            <span class="text-2xl select-none" aria-hidden="true">
              &gt;&nbsp;
            </span>
            <span>Building fast and responsive websites.</span>
          </h1>
          <ContactButton />
        </div>
      </header>
      <main
        class="grid gap-y-24 border-y border-y-[#333] pt-8 pb-32 sm:border-b-0">
        <section id="about" class="scroll-mt-28">
          <div
            class="prose-h2:text-3xl prose-h2:tracking-tight first-of-type:prose-p:mt-8 prose-p:leading-7 prose-h2:font-semibold!">
            <About />
          </div>
          <div class="prose-p:text-pretty mt-24 w-full">
            <SkillList type="frontend" />
          </div>
        </section>
        <section id="works" class="scroll-mt-14">
          <Projects />
        </section>
        <section class="text-secondary">
          <article>
            <h2 class="font-bold text-xl mb-4">Sweet Life Candies says..</h2>
            <div
              class="shadow-[0_0_16px_-8px_#333] p-4 rounded-xl grid grid-cols-[auto_1fr_auto] gap-x-4 grid-rows-[1fr_auto] gap-y-8">
              <svg
                class="opacity-10"
                xmlns="http://www.w3.org/2000/svg"
                width={32}
                height={32}
                viewBox="0 0 32 32">
                <path
                  fill="currentColor"
                  d="M14.505 5.873Q8.6 9.654 8.6 14.98q0 1.657.577 1.657l.396-.107q.467-.18.756-.18q1.692 0 2.825 1.23t1.134 3.036q-.001 1.736-1.225 2.947q-1.224 1.21-2.952 1.21q-2.412 0-3.98-1.983q-1.564-1.98-1.564-4.977q-.001-3.39 1.33-6.203q1.334-2.812 4.068-5.085q2.736-2.271 3.492-2.272q.504 0 .828.486q.324.485.324.845l-.107.288zm12.96 0q-5.905 3.78-5.904 9.108q0 1.657.577 1.657l.396-.107q.467-.18.756-.18q1.656 0 2.807 1.23q1.153 1.228 1.152 3.036q-.001 1.736-1.225 2.947q-1.224 1.21-2.952 1.21q-2.412 0-3.98-1.983q-1.564-1.98-1.564-4.977q-.002-3.426 1.35-6.256q1.35-2.831 4.067-5.067q2.722-2.237 3.475-2.237q.505 0 .83.486q.323.486.323.846z">
                </path>
              </svg>
              <p class="text-lg">
                Ken is easily our favorite website designer weâ€™ve worked with!
                He is very fast, and a very good communicator!! He goes above
                and beyond! We would hire him again ten times out of ten!
              </p>
              <svg
                class="-scale-x-100 opacity-10 place-self-end"
                xmlns="http://www.w3.org/2000/svg"
                width={32}
                height={32}
                viewBox="0 0 32 32">
                <path
                  fill="currentColor"
                  d="M14.505 5.873Q8.6 9.654 8.6 14.98q0 1.657.577 1.657l.396-.107q.467-.18.756-.18q1.692 0 2.825 1.23t1.134 3.036q-.001 1.736-1.225 2.947q-1.224 1.21-2.952 1.21q-2.412 0-3.98-1.983q-1.564-1.98-1.564-4.977q-.001-3.39 1.33-6.203q1.334-2.812 4.068-5.085q2.736-2.271 3.492-2.272q.504 0 .828.486q.324.485.324.845l-.107.288zm12.96 0q-5.905 3.78-5.904 9.108q0 1.657.577 1.657l.396-.107q.467-.18.756-.18q1.656 0 2.807 1.23q1.153 1.228 1.152 3.036q-.001 1.736-1.225 2.947q-1.224 1.21-2.952 1.21q-2.412 0-3.98-1.983q-1.564-1.98-1.564-4.977q-.002-3.426 1.35-6.256q1.35-2.831 4.067-5.067q2.722-2.237 3.475-2.237q.505 0 .83.486q.323.486.323.846z">
                </path>
              </svg>
              <div class="flex gap-x-2 items-center col-span-3 col-start-2">
                <img
                  width="32"
                  height="32"
                  src="/assets/images/sweet-life-candies-logo.png"
                  alt="Sweet Life Candies Logo"
                />
                <p class="font-bold">sweetlifecandies.shop</p>
              </div>
            </div>
          </article>
        </section>
        <section class="w-full py-10">
          <h2 class="mb-2 text-2xl">Get in touch.</h2>
          <p>Lets discuss what should your fast and responsive website be.</p>
          <ContactButton />
        </section>
        <section id="posts" class="scroll-mt-14">
          <LatestPosts />
          <a
            href="/posts"
            class="mt-6 flex w-max items-center gap-x-2 leading-none">
            I have more posts <Linkout />
          </a>
        </section>
      </main>
    </Column>
  </MainLayout>
</Html>
