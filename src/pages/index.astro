---
import MainLayout from "../layout/mainLayout.astro";
import SkillList from "../components/cards/SkillList.astro";
import { Content as About } from "../about/about.mdx";
import Projects from "../components/sections/projects.astro";
import LatestPosts from "../components/sections/latestPosts.astro";
import Column from "../layout/column.astro";
import Html from "../layout/html.astro";
import type { MetaTagProps } from "../type/metaTypes";
import Linkout from "../components/icons/linkout.astro";

const metaTags: MetaTagProps = {
  title: "Ken Rula",
  description: "Building fast and responsive websites.",
  url: Astro.url,
};
---

<Html title="Ken Rula" metaTags={metaTags}>
  <MainLayout pageType="Home">
    <Column>
      <header class="grid min-h-[calc(100dvh-175px)] content-center">
        <div>
          <h1 class="flex text-4xl tracking-tight text-balance">
            <span class="text-2xl select-none" aria-hidden="true">
              &gt;&nbsp;
            </span>
            <span>Building fast and responsive websites.</span>
          </h1>
          <a
            href="mailto:contact@kenrula.com"
            class="hover:bg-accent/50 border-secondary text-secondary mt-4 flex max-w-min items-center gap-x-1.5 rounded border px-4 py-2 leading-none font-semibold no-underline transition-colors duration-300 hover:border-transparent">
            <svg
              class="flex-grow"
              width="16"
              height="16"
              viewBox="0 0 16 16"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-label="e-mail">
              <path
                d="M1 2C0.447715 2 0 2.44772 0 3V12C0 12.5523 0.447715 13 1 13H14C14.5523 13 15 12.5523 15 12V3C15 2.44772 14.5523 2 14 2H1ZM1 3L14 3V3.92494C13.9174 3.92486 13.8338 3.94751 13.7589 3.99505L7.5 7.96703L1.24112 3.99505C1.16621 3.94751 1.0826 3.92486 1 3.92494V3ZM1 4.90797V12H14V4.90797L7.74112 8.87995C7.59394 8.97335 7.40606 8.97335 7.25888 8.87995L1 4.90797Z"
                fill="currentColor"
                fill-rule="evenodd"
                clip-rule="evenodd">
              </path>
            </svg>
            <span>contact@kenrula.com</span>
          </a>
        </div>
      </header>
      <main
        class="maxSm:border-b border-y-secondary mx-auto grid max-w-(--breakpoint-xsm) justify-items-center gap-y-24 border-t pt-8 pb-16">
        <section id="about" class="scroll-mt-28">
          <div
            class="prose-h2:text-3xl prose-h2:tracking-tight first-of-type:prose-p:mt-8 prose-p:leading-7 prose-h2:font-semibold!">
            <About />
          </div>
          <div class="prose-p:text-pretty mt-24 w-full">
            <SkillList type="frontend" />
          </div>
        </section>
        <section id="works" class="scroll-mt-14">
          <Projects />
        </section>
        <section id="posts" class="scroll-mt-14">
          <LatestPosts />
          <a href="/posts" class="mt-6 flex gap-x-2 items-center leading-none">
            I have more posts <Linkout />
          </a>
        </section>
      </main>
    </Column>
  </MainLayout>
</Html>
